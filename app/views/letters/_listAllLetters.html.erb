<div class="container">
	<% @letter.each_with_index do |letter, index| %>
		<% if (index % 3 == 0) %>
			<div class="row">
		<% end %>
		<div class="col col-md-4 ">
		<div class="pull-down">
		<p class="letter-title-text"><%= letter.title %></p>
			<a href ="<% if letter.isArchived %><%= show_archived_letter_path(letter) %><% else %><%= letter_path(letter) %><% end %>">
			<div class="envelope-<%= letter.colour %>">
			<div class="paper"></div>
			</div>
			</a>
			<p class="letter-date-text"><%= letter.created_at.strftime("%d %b. %Y") %></p>
		</div>
		</div>
		<% if (index % 3 == 2 || index == (@letter.count-1))  %>
			</div>
		<% end %>
	<% end %>